@{
    ViewBag.Title = "EmpData";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.13/css/select2.min.css" rel="stylesheet" />
<script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.13/js/select2.min.js"></script>

<style>
    /* ... */
</style>

<h2>搜尋員工資料</h2>

<br />

@using (Html.BeginForm("EmpDataResult", "Home", FormMethod.Post))
{
    <div>
        <span class="title-wrapper"><span>請輸入員編：</span></span>
        <!-- 使用 Select2  -->
        <select id="empno" name="empno" required="required">
            <option value="">請選擇員工編號</option>
            @foreach (var item in ViewBag.IdList)
            {
                <option value="@item.id">@item.id</option>
            }
        </select>
        <input type="submit" value="搜尋" class="search-button" />
    </div>

    <script>
        // 使用 Select2 
        $(document).ready(function () {
            $('#empno').select2();
        });
    </script>
}